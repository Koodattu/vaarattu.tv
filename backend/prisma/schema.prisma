generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  twitchId     String        @unique
  login        String        @unique
  name         String
  avatar       String?
  lastSeen     DateTime?
  messages     Message[]
  redemptions  Redemption[]
  viewSessions ViewSession[]
  nameHistory  NameHistory[]
  viewerProfile ViewerProfile?
  emoteUsages  EmoteUsage[]
}

model Message {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  content   String
  timestamp DateTime
}

model ChannelReward {
  id        String   @id // Twitch reward ID
  title     String
  prompt    String?
  cost      Int
  isEnabled Boolean
  redemptions Redemption[]
}

model Redemption {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  rewardId  String
  channelReward ChannelReward @relation(fields: [rewardId], references: [id])
  points    Int
  timestamp DateTime
  customText String?
}

model Stream {
  id        Int      @id @default(autoincrement())
  startTime DateTime
  endTime   DateTime?
  status    String
  title     String
}

model ViewerProfile {
  user      User     @relation(fields: [userId], references: [id])
  userId    Int      @id
  aiSummary String?
  lastUpdate DateTime?
  stats     Json?
  consent   Boolean  @default(false)
  achievements Json?
}

model EmoteUsage {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  emote     String
  platform  String
  count     Int
  timestamp DateTime
}

model ViewSession {
  id           Int      @id @default(autoincrement())
  user         User     @relation(fields: [userId], references: [id])
  userId       Int
  sessionStart DateTime
  sessionEnd   DateTime?
}

model NameHistory {
  id           Int      @id @default(autoincrement())
  user         User     @relation(fields: [userId], references: [id])
  userId       Int
  previousName String
  changedAt    DateTime
}

model SetupItem {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  image       String?
  modelUrl    String?
}
